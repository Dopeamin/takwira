<div class="right-container">
    <h1>Orders : </h1>
    {{form(form)}}
    <table>
        <tr>
                <td><h2>ID</h2></td>
                <td><h2>Start Time</h2></td>
                <td><h2>End Time</h2></td>
                <td><h2>Stade</h2></td>
